<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: 'form-horizontal' }) do |f| %>

    <div class="form-group">
      <%= f.label :email, 'Correo electrónico', class: 'sr-only col-sm-4 control-label' %>
      <div class="col-sm-4">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Correo electrónico', autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Contraseña', class: 'sr-only col-sm-4 control-label' %>
      <div class="col-sm-4">
        <%= f.password_field :password, class: 'form-control', type: 'password', placeholder: 'Contraseña' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-4">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> <%= f.label :remember_me, 'No cerrar sesión' %>
              </label>
            </div>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit 'Iniciar sesión', class: 'btn btn-primary btn-block' %>
      </div>
    </div>

    <!--<div class="form-group">
      <%#= f.label 'Recuperar', class: 'sr-only col-sm-4 control-label' %>
      <div class="col-sm-4">
        <%# if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%#= link_to '¿Olvidaste tu contraseña?', new_password_path(resource_name) %>
        <%# end %>
      </div>
    </div>-->

<% end %>

