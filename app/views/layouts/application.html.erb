<!DOCTYPE html>
<html>
<head>
  <title>ProductGallery</title>
  <%= stylesheet_link_tag    'application', :media => "all" %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar-wrapper">
  <div class="container">

    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Home', root_path, class: 'navbar-brand' %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Opciones <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% if user_signed_in? %>
                    <li><%= link_to 'Registrar nuevo usuario', new_user_registration_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to 'Editar cuenta', edit_user_registration_path %></li>
                    <li><%= link_to 'Cerrar sesión', destroy_user_session_path, :method=>'delete' %></li>

                <% else %>
                    <li><%= link_to 'Iniciar sesión', new_user_session_path %></li>
                <% end %>
                <% if user_signed_in? %>
                    <li><%#= link_to 'Users', users_path %></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>

<div class="container">
  <% flash.each do |key, msg| %>
      <div class="alert alert-<%= key %> alert-dismissable auto-remove">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <p><%= msg %></p>
      </div>
  <% end %>
  <div class="jumbotron">

    <%= yield %>
  </div>
</div>






  <!-- FOOTER -->
  <footer>
    <p class="pull-right"><a href="#">Back to top</a></p>
    <p>© 2014 Company, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
  </footer>

</div><!-- /.container -->


