<div class="row">
  <% @products.each do |product| %>
      <div class="col-lg-3 col-md-4 col-xs-6" style="text-align: center">
        <% if product.pictures.count > 0 %>
            <%= link_to product do %>
                <%= image_tag product.pictures.first.attachment(:medium), class: 'img-circle', style: 'width: 140px; height: 140px' %>
            <% end %>
        <% elsif can? :new, Picture %>
            <%= link_to '<i class="fa fa-cloud-upload fa-5x" style="width: 140px; height: 140px; text-align: center; padding: 30px 0px"></i>'.html_safe, new_picture_path(product_id: product.id), title: 'Cargue una im치gen para el producto' %>
        <% else %>
           <i class="fa fa-ban fa-5x" title="Im치gen no disponible" style="width: 140px; height: 140px; text-align: center; padding: 30px 0px"></i>
        <% end %>
        <h2><%= product.description %></h2>
        <p>
          <%= pluralize(product.pictures.count, 'im치gen') %>
          <% if can? :new, Picture %>
              <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_picture_path(product_id: product.id), title: 'Cargue una im치gen para el producto' %>
          <% end %>
        </p>

        <p><%= link_to 'Ver detalles >>', product, class: 'btn btn-default' %></p>
      </div><!-- /.col-lg-4 -->
  <% end %>
</div>

<% if can? :new, Product %>
    <%= link_to 'Crear producto', new_product_path %>
<% end %>